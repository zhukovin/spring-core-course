<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="com.epam.edu.spring.core.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Snow"/>
    </bean>

    <bean id="eventLogger" class="com.epam.edu.spring.core.ConsoleEventLogger"/>

    <bean id="app" class="com.epam.edu.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="event" class="com.epam.edu.spring.core.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance">
                <constructor-arg value="1"/>
                <constructor-arg value="1"/>
            </bean>
        </constructor-arg>
    </bean>

</beans>